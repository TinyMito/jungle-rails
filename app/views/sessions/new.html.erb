<section class="sessions-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <%= form_tag '/login' do %>

    <p>Email: <%= text_field_tag :email %></p>
    <p>Password: <%= password_field_tag :password %></p>
    <%= submit_tag "Login" %>
  
  <% end %>

</section>
